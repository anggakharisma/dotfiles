{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "blue": "#2075C6",
    "white": "#FFFFFF",
    "closer": "p:os",
    "lavender": "#B7BDF8",
    "os": "#ACB0BE",
    "pink": "#F5BDE6"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{.Icon}} ",
          "foreground": "#FFFFFF",
          "background": "blue",
          "type": "os",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .UserName }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "blue",
          "type": "session",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "\uf115 ",
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "\ueb06 ",
            "style": "agnoster_short"
          },
          "foreground": "blue",
          "powerline_symbol": "\ue0b0",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "mapped_branches": {
              "bug/*": " üêõ ",
              "feat/*": " \ud83d\ude80 "
            },
            "source": "cli"
          },
          "template": "{{ .UpstreamIcon }} {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf0c7 {{ .StashCount }}{{ end }} ",
          "foreground": "blue",
          "type": "git",
          "style": "powerline",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}{{ end }}",
            "{{ if gt .Ahead 0 }}{{ end }}",
            "{{ if gt .Behind 0 }}{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\uebca ",
          "foreground": "blue",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
